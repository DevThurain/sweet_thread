<?xml version="1.0" encoding="utf-8"?>
<com.thurainx.sweetthreads.viewpods.AuthHeaderViewpod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAuthTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lbl_welcome_back"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular_3x" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAuthSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lbl_please_log_in"
        android:textAlignment="center"
        android:textColor="@color/color_dark_grey"
        android:textSize="@dimen/text_regular" />

</com.thurainx.sweetthreads.viewpods.AuthHeaderViewpod>